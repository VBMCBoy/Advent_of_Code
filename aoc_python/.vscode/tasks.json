{
    "version": "2.0.0",
    "tasks": [
    {
        "label": "Run current file",
        "type": "shell",
        "command": "python3 ${file}",
        "presentation": {
            "reveal": "always",
            "focus": true
        },
        "options": {
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${fileDirname}"
        }
    }
    ]
}
